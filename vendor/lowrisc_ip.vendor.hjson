{
    name: "lowrisc_ip",
    target_dir: "lowrisc_ip",
    patch_dir: "patches/lowrisc_ip",

    upstream: {
        url: "https://github.com/lowRISC/opentitan"
        rev: "earlgrey_1.0.0"
    }

    exclude_from_upstream: [
      # Remove parts of prim that we don't need.
      "**/*alert*",
      "**/*esc*",
      "**/*lc*",
      "**/*mubi*",
      "**/*secded*",
    ]

    mapping: [
        {from: "hw/ip/prim",         to: "prim"},
        {from: "hw/ip/prim_generic", to: "prim_generic", patch_dir: "."},

        {from: "hw/lint",            to: "lint"},
    ]
}
